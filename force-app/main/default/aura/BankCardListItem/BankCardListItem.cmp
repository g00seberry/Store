<aura:component>
    <aura:attribute name="card" type="BankCard__c"/>
    
    <div class="slds-box slds-box_small">
        <dl class="slds-dl_horizontal">
  			<dt class="slds-dl_horizontal__label">Номер:</dt>
          	<dd class="slds-dl_horizontal__detail">{! v.card.CardNumber__c }</dd>
          	<dt class="slds-dl_horizontal__label">Владелец:</dt>
          	<dd class="slds-dl_horizontal__detail">{! v.card.CardOwner__c }</dd>
            <dt class="slds-dl_horizontal__label">Срок:</dt>
          	<dd class="slds-dl_horizontal__detail">{! v.card.ExpiryDate__c }</dd>
        </dl>
	</div>
</aura:component>