<aura:component controller="AuthController">
    <aura:attribute
                    name="user"
                    type="Object"
                    default="null"/> 
    
    <div aria-labelledby="logoutform">
        <fieldset class="slds-box slds-theme_default slds-container_small">
            <legend id="logoutform" class="slds-text-heading_small slds-p-vertical_medium">
                Выход
            </legend>
            <h2 class="slds-text-heading_medium slds-text-align_center">
                Вы действительно хотите выйти?
            </h2>
            <lightning:button 
                               label="Выйти"
                               class="slds-m-top_medium"
                               variant="brand"
                               onclick="{!c.logout}"/>
        </fieldset>
    </div>
</aura:component>